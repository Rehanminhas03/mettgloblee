# ===========================================
# METT Global - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# EMAIL CONFIGURATION (Nodemailer)
# ===========================================

# Your SMTP host (examples below)
# Gmail: smtp.gmail.com
# Outlook/Hotmail: smtp-mail.outlook.com
# Yahoo: smtp.mail.yahoo.com
# Custom domain: mail.yourdomain.com
SMTP_HOST=smtp.gmail.com

# SMTP Port
# 587 = TLS (recommended)
# 465 = SSL
# 25 = No encryption (not recommended)
SMTP_PORT=587

# Set to "true" only if using port 465
SMTP_SECURE=false

# Your email credentials
# For Gmail: Use your email and an "App Password" (not your regular password)
# Go to: Google Account > Security > 2-Step Verification > App passwords
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# (Optional) The "from" email address shown in emails
# If not set, SMTP_USER will be used
SMTP_FROM=noreply@mettglobal.com

# Email address where you want to receive contact form submissions
CONTACT_EMAIL=hello@mettglobal.com
